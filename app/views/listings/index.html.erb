<div class="row">
  <div class="col s10 offset-s1">
  <br />
    <h2>Current Listings</h2>
    <br />
      <% if @listings.any? %>

    
    <div class="row">
        
          <% @listings.each do |listing| %>
        
               <div class="col s12 m4" style="min-height: 400px;">
                  <div class="card" >
                    <div class="card-image" >
                      <%= image_tag listing.avatar.url(:medium), class: "activator" %>
                      <span class="card-title"><%= listing.address %></span>
                    </div>
                    <div class="card-content">
                      <span class="activator">More Info</span>
                      <%= link_to "View Listing", listing_path(listing) %>
                    </div>
                    <div class="card-reveal">
                      <p><%= listing.description %></p>
                      <p>Square Footage: <%= listing.square_footage %></p>
                      <span class="card-title cyan-text">Hide Description</span>
                    </div>
                  </div>
                </div>
          <% end %>
        <% else %>
          <h3>No listings to show</h3>
      <% end %>
     <br />
  </div>
      <hr />
      <br />
    <%= render(partial:'form_for_realtor') %>
 </div>
</div>

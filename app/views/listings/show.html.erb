<div class="row">
  <div class="col s10 offset-s1">
    <br />
    <h2><%= @listing.address %></h2>
    <br />
    <p>Listing Description: <%= @listing.description %></p>

    <p>Address: <%= @listing.address %></p>

    <p>Zip code: <%= @listing.zip %></p>

    <p>Square Footage: <%= @listing.square_footage %></p>
    
    <% if realtor_signed_in? %>
      <%= link_to 'Edit Listing', edit_realtor_listing_path(@realtor, @listing), class: "btn", onclick: "Materialize.showStaggeredList('#staggered-test')" %>
      <%= link_to 'Delete Listing', realtor_listing_path(@realtor, @listing), method: :delete, class: "btn", onclick: "Materialize.showStaggeredList('#staggered-test')" %>
      <% else %>
        <a href="<% link_to new_listing_inquery_path(@listing)%>" class="btn" onclick="Materialize.showStaggeredList('#staggered-test')">Request Information</a>
    <% end %>
  </div>
</div>
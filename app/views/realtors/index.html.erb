<div class="row">
  <div class="col s10 offset-s1">
    <h2> 
      Welcome,
      <% if realtor_signed_in? %>
        <%= current_realtor.first_name %>
      <% end %>  
    </h2>
    <h2>Index Listings</h2>

    <br />
    <% if @listings.any? %>
      <ul>
        <% @listings.each do |listing| %>
          <li>
            <%= link_to "#{listing.first_name}", listing_path(listing) %>
            <%= button_to 'Edit Listing', edit_listing_path(listing), method: :get %>
            <%= button_to "Delete Listing", listing_path(listing), method: :delete, data: {confirm: 'Really delete this Listing?'} %>
          </li>
        <% end %>
      </ul>
      <% else %>
        <h2>No Listings</h2>
    <% end %>

  </div>
</div>

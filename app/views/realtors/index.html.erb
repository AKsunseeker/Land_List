<div class="row">
  <div class="col s10 offset-s1">
    <h2> 
      Welcome,
      <% if realtor_signed_in? %>
        <%= current_realtor.first_name %>
      <% end %>  
    </h2>
    <h1>Index Listings</h1>

    <br />
    <% if @listings.any? %>
      <ul>
        <% @listings.each do |list| %>
          <li>
            <%= link_to "Listing - #{listing.name}", listing_path(listing) %>
            <%= button_to 'Edit Listing', edit_listing_path(listing), method: :get %>
            <%= button_to "Delete Listing", listing_path(list), method: :delete, data: {confirm: 'Really delete this Listing?'} %>
          </li>
        <% end %>
      </ul>
      <% else %>
        <h3>No listings to show</h3>
    <% end %>
    <hr />

    <%= link_to 'Logout', destroy_realtor_session_path, method: :delete %>
  </div>
</div>
